{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "process",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}